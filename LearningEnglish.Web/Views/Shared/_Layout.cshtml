    <script>
        user = window.localStorage.getItem("user");

        if (user == null) {
            document.getElementById('login').innerHTML = "Đăng Nhập";
            document.getElementById('register').innerHTML = "Đăng kí";
            document.getElementById('hello').innerHTML = "";
            document.getElementById('logout').innerHTML = "";
            document.getElementById('textThiTN').innerHTML = "";
            document.getElementById('thitn').href = "";

        }
        else {
            username = JSON.parse(user).username;
            document.getElementById('hello').innerHTML = "Xin Chào " + username;
            document.getElementById('chinhsua').href = "/user/edit/"+JSON.parse(user).Id;
            document.getElementById('logout').innerHTML = "Đăng xuất";
            document.getElementById('login').innerHTML = "";
            document.getElementById('register').innerHTML = "";
            document.getElementById('textThiTN').innerHTML = "Kết Quả Thi";
            document.getElementById('thitn').href = "/achievement/"+JSON.parse(user).Id;
            
        }
        function dangxuat() {
            window.localStorage.removeItem("user");
        }
