@model List<LessonForListViewModel>
@{
    //ViewData["Title"] = "GetLessons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@foreach (var lesson in Model)
{
    <div class="col-12 col-lg-6">
        <div class="single-top-popular-course d-flex align-items-center flex-wrap mb-30 wow fadeInUp" data-wow-delay="400ms">
            <div class="popular-course-content">
                <h4>@lesson.Name</h4>
                <p class="rutgon">@lesson.Type.</p>
                <a href="#" class="btn academy-btn btn-sm">Xem chi tiết</a>
            </div>
            @*<div class="popular-course-thumb bg-img" style="background-image: url(@lesson.Tittle);"></div>*@
        </div>
    </div>
}